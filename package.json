{
  "name": "debate-game",
  "version": "1.0.0",
  "description": "Small prototype for a university project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "node server.js",
    "client": "npm run serve --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
